<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="signup-login">Signup</h1>
                    <form class="signup-form">
                        <div class="mb-3">
                            <label for="username-signup" class="form-label login-label">Username:</label>
                            <input type="text" class="form-control" id="username-signup">
                        </div>
                        <div class="mb-3">
                            <label for="password-signup" class="form-label login-label">Password:</label>
                            <input type="password" class="form-control" id="password-signup">
                        </div>
                        <button type="submit" class="btn">Signup</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="signup-login">Login</h1>
                    <form class="login-form">
                        <div class="mb-3">
                            <label for="username-login" class="form-label login-label">Username:</label>
                            <input type="text" class="form-control" id="username-login">
                        </div>
                        <div class="mb-3">
                            <label for="password-login" class="form-label login-label">Password:</label>
                            <input type="password" class="form-control" id="password-login">
                        </div>
                        <button type="submit" class="btn">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>